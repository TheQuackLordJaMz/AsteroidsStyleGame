using UnityEngine;

public class Player : MonoBehaviour
{
    [Header("MovementSpeedStuff")]
    [SerializeField]private bool thrusting;
    [SerializeField]private float thrustSpeed = 1f;
    [SerializeField]private float turnDirection;
    [SerializeField]private float turnSpeed = 2f;

    [SerializeField]private Rigidbody2D rb;

    private void Awake()
    {
        rb = GetComponent<Rigidbody2D>();
    }
    
    void Update()
    {
        ControlsInputCheck(); //call the movement controls function
    }

    void ControlsInputCheck() 
    {
        //Controls/check for input
        thrusting = (Input.GetKey(KeyCode.W));
        if (Input.GetKey(KeyCode.A))
        {
            turnDirection = 1.0f;
        }
        else if (Input.GetKey(KeyCode.D))
        {
            turnDirection = -1.0f;
        }
        else { turnDirection = 0; }
    }

    void ShipMovement() 
    {
        //goes in fixed update
        //apply movement 
        if (thrusting)
        {
            rb.AddForce(this.transform.up * thrustSpeed);
        }
        if (turnDirection != 0)
        {
            rb.AddTorque(turnDirection * turnSpeed);
        }
    }

    private void FixedUpdate()
    {
        ShipMovement();
    }

}
